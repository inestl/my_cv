<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
     <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

     <title>One Page Resume</title>

     <style type="text/css">
        * { margin: 0; padding: 0; }
        body { font: 16px Helvetica, Sans-Serif; line-height: 24px; background: url(images/noise.jpg); }
        .clear { clear: both; }
        #page-wrap { width: 800px; margin: 40px auto 60px; }
        #pic { float: right; margin: -30px 0 0 0; }
        h1 { margin: 0 0 16px 0; padding: 0 0 16px 0; font-size: 42px; font-weight: bold; letter-spacing: -2px; border-bottom: 1px solid #999; }
        h2 { font-size: 20px; margin: 0 0 6px 0; position: relative; }
        h2 span { position: absolute; bottom: 0; right: 0; font-style: italic; font-family: Georgia, Serif; font-size: 16px; color: #999; font-weight: normal; }
        p { margin: 0 0 16px 0; }
        a { color: #999; text-decoration: none; border-bottom: 1px dotted #999; }
        a:hover { border-bottom-style: solid; color: black; }
        ul { margin: 0 0 32px 17px; }
        #objective { width: 500px; float: left; }
        #objective p { font-family: Georgia, Serif; font-style: italic; color: #666; }
        dt { font-style: italic; font-weight: bold; font-size: 18px; text-align: right; padding: 0 26px 0 0; width: 150px; float: left; height: 100px; border-right: 1px solid #999;  }
        dd { width: 600px; float: right; }
        dd.clear { float: none; margin: 0; height: 15px; }
        
  #contactForm {
      margin: 0 auto;
}

  #contactForm input, textarea {
      letter-spacing: 2px;
      font: 200 1em/1.1em 'Helvetica Neue', sans-serif;
      
      color: #000;
      background-color: RGBA(204, 204, 204, .1);
    
      outline: none; border: none;
   
      display:block;
      margin: 0 auto;
      padding: 1em;
      width: 90%;
      max-width: 400px;
 }

#contactForm textarea {
  height: 150px;
}

#contactForm *:focus {
   background-color: RGBA(235, 188, 249, 1);
}

#contactForm *:hover {
   background-color: RGBA(235, 188, 249, 1);
}

::-webkit-input-placeholder {
      color: #777;
}

:-moz-placeholder { /* Firefox 18- */
      color: #777; 
}

::-moz-placeholder {  /* Firefox 19+ */
    color: #777; 
}

:-ms-input-placeholder {  
       color: #777;
}
     </style>
</head>

<body>

    <div id="page-wrap">
    
        <img src="/my_cv/images/cthulu.png" alt="Photo of Cthulu" id="pic" />
    
        <div id="contact-info" class="vcard">
        
         
            <h1 class="fn"> La pieuvre</h1>
        
            <p>
                Tel: <span class="tel">555-666-7777</span><br />
                Email: <a class="email" href="mailto:greatoldone@lovecraft.com">greatoldone@lovecraft.com</a>
            </p>
        </div>
                
        <div id="objective">
            <p>
              Bienvenue sur mon CV interactif
            </p>
        </div>
        
        <div class="clear"></div>
        
        <dl>
            <dd class="clear"></dd>
            
         
            <dt>Formation</dt>
            <dd>
        
            <!-- Microformats! -->
            {% for formation in formations %} 
            
              <h2>  {{ formation.getIntitule() }} </h2>
                <td>
                    {% if is_granted('ROLE_ADMIN') %} <a href="{{ path('formation_show', {'id': formation.id}) }}">show</a> {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}<a href="{{ path('formation_edit', {'id': formation.id}) }}">edit</a> {% endif %}
                    {% if is_granted('ROLE_ADMIN') %} <a href="{{ path('formation_delete', {'id': formation.id}) }}">delete</a> {% endif %}
                </td>
                   <p><strong>Lieu:</strong> {{ formation.getLieu() }} </br>
                  {{ formation.getDescription() }}
              
            {% endfor %}
            
            
            
                    
                    
            </dd>
            
            
            <dd class="clear"></dd>
            
            <dt>Compétences</dt>
            <dd>
                {% for competence in competences %} 
              <h2>  {{ competence.getCompetences() }} </h2>
               <p>   {{ competence.getDescription() }}</p>
               
               <td>
                   {% if is_granted('ROLE_ADMIN') %} <a href="{{ path('competence_show', {'id': competence.id}) }}">show</a> {% endif %}
                   {% if is_granted('ROLE_ADMIN') %} <a href="{{ path('competence_edit', {'id': competence.id}) }}">edit</a> {% endif %}
                   {% if is_granted('ROLE_ADMIN') %} <a href="{{ path('competence_delete', {'id': competence.id}) }}">delete</a> {% endif %}
                </td>
              {% endfor %}
                <h2></h2>
              
            </dd>
            
            <dd class="clear"></dd>
            
            <dt>Expériences</dt>
            <dd>
                {% for experience in experiences %} 
              <h2>  {{ experience.getExperience() }} <span>{{ experience.getLieu() }}</span></h2>
                 <td>
                   {% if is_granted('ROLE_ADMIN') %} <a href="{{ path('experience_show', {'id': experience.id}) }}">show</a> {% endif %}
                   {% if is_granted('ROLE_ADMIN') %} <a href="{{ path('experience_edit', {'id': experience.id}) }}">edit</a> {% endif %}
                   {% if is_granted('ROLE_ADMIN') %} <a href="{{ path('experience_delete', {'id': experience.id}) }}">delete</a> {% endif %}
                </td>
                 <ul>
                    <li> {{ experience.getDescription() }} </li>
                    </ul>
                    
              {% endfor %}
                
                
            
            </dd>
            
        <dd class="clear"></dd>
        
            <dt>Hobbies</dt>
                     <dd>
                        {% for hobby in hobbies %} 
                       <p>
                <td>{{ hobby.id }}</td>
                <td>{{ hobby.hobbies }}</td>
                <td>
                    {% if is_granted('ROLE_ADMIN') %}  <a href="{{ path('hobbies_show', {'id': hobby.id}) }}">show</a> {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}  <a href="{{ path('hobbies_edit', {'id': hobby.id}) }}">edit</a> {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}  <a href="{{ path('hobbies_delete', {'id': hobby.id}) }}">delete</a> {% endif %}
                    
                </td>
            </p>
                        {% endfor %}
                        </dd>
        <div class="clear"></div>
{% if is_granted('ROLE_ADMIN') %}
    <a href="...">Delete</a>
{% endif %}
    
    </div>
    
   

</body>

</html>